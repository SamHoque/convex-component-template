{
	"name": "@slapinc/convex-component-template",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"exports": {
		"./package.json": "./package.json",
		".": {
			"@convex-dev/component-source": "./src/client/index.ts",
			"types": "./dist/client/index.d.ts",
			"default": "./dist/client/index.js"
		},
		"./convex.config": {
			"@convex-dev/component-source": "./src/component/convex.config.ts",
			"types": "./dist/component/convex.config.d.ts",
			"default": "./dist/component/convex.config.js"
		},
		"./react": {
			"@convex-dev/component-source": "./src/react/index.ts",
			"types": "./dist/react/index.d.ts",
			"default": "./dist/react/index.js"
		}
	},
	"scripts": {
		"dev": "run-p -r 'dev:backend' 'dev:frontend' 'build:watch'",
		"dev:backend": "convex dev --live-component-sources --typecheck-components",
		"dev:frontend": "bun --hot example/src/index.tsx",
		"build": "tsc --project tsconfig.build.json",
		"build:watch": "chokidar 'tsconfig*.json' 'src/**/*.ts' -i '**/*.test.*' -i '**/test-setup.ts' -c 'bun run build' --initial",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:bail": "bun test --bail",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@types/bun": "^1.3.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"chokidar-cli": "^3.0.0",
		"convex-test": "^0.0.38",
		"lefthook": "^2.0.0",
		"npm-run-all": "^4.1.5"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"bun-plugin-tailwind": "^0.1.2",
		"convex": "^1.28.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwindcss": "^4.1.16"
	}
}
