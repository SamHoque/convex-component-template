{
	"name": "@samhoque/convex-component-template",
	"version": "0.1.0",
	"description": "A modern Convex component boilerplate with Bun, Biome, TypeScript, and automated testing.",
	"license": "Apache-2.0",
	"type": "module",
	"keywords": [
		"convex",
		"component",
		"template",
		"boilerplate",
		"bun",
		"biome",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/samhoque/convex-component-template.git"
	},
	"bugs": {
		"url": "https://github.com/samhoque/convex-component-template/issues"
	},
	"homepage": "https://github.com/samhoque/convex-component-template#readme",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"@convex-dev/component-source": "./src/client/index.ts",
			"types": "./dist/client/index.d.ts",
			"default": "./dist/client/index.js"
		},
		"./convex.config": {
			"@convex-dev/component-source": "./src/component/convex.config.ts",
			"types": "./dist/component/convex.config.d.ts",
			"default": "./dist/component/convex.config.js"
		},
		"./react": {
			"@convex-dev/component-source": "./src/react/index.ts",
			"types": "./dist/react/index.d.ts",
			"default": "./dist/react/index.js"
		}
	},
	"scripts": {
		"dev": "run-p -r 'dev:backend' 'dev:frontend' 'build:watch'",
		"dev:backend": "convex dev --live-component-sources --typecheck-components",
		"dev:frontend": "bun --hot example/src/index.tsx",
		"build": "tsc --project tsconfig.build.json",
		"build:watch": "chokidar 'tsconfig*.json' 'src/**/*.ts' -i '**/*.test.*' -i '**/test-setup.ts' -c 'bun run build' --initial",
		"clean": "rm -rf dist node_modules",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:bail": "bun test --bail",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"attw": "attw $(npm pack -s) --exclude-entrypoints ./convex.config --profile esm-only",
		"prepare": "bun run build",
		"changeset": "changeset",
		"ci:version": "changeset version && bun update",
		"ci:publish": "bun run preversion && changeset publish",
		"preversion": "bun run clean && bun install && run-p test lint typecheck attw",
		"version": "pbcopy <<<$npm_package_version; vim CHANGELOG.md && biome format --write CHANGELOG.md && git add CHANGELOG.md",
		"postversion": "git push --follow-tags",
		"alpha": "bun run preversion && npm version prerelease --preid alpha && npm publish --tag alpha",
		"release": "bun run preversion && npm version patch && npm publish"
	},
	"peerDependencies": {
		"convex": "^1.0.0",
		"react": "^18.0.0 || ^19.0.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@biomejs/biome": "2.3.2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/types": "^20.0.0",
		"@types/bun": "^1.3.1",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"bun-plugin-tailwind": "^0.1.2",
		"chokidar-cli": "^3.0.0",
		"commitlint-config-gitmoji": "^2.3.1",
		"convex": "^1.28.0",
		"convex-test": "^0.0.38",
		"lefthook": "^2.0.2",
		"npm-run-all": "^4.1.5",
		"pkg-pr-new": "^0.0.60",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"shadcn": "^3.5.0",
		"tailwindcss": "^4.1.16"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-aspect-ratio": "^1.1.7",
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-context-menu": "^2.2.16",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-hover-card": "^1.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-menubar": "^1.1.16",
		"@radix-ui/react-navigation-menu": "^1.2.14",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-progress": "^1.1.7",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slider": "^1.3.6",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-toggle": "^1.1.10",
		"@radix-ui/react-toggle-group": "^1.1.11",
		"@radix-ui/react-tooltip": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"embla-carousel-react": "^8.6.0",
		"input-otp": "^1.4.2",
		"lucide-react": "^0.548.0",
		"next-themes": "^0.4.6",
		"radix-ui": "^1.4.3",
		"react-day-picker": "^9.11.1",
		"react-hook-form": "^7.65.0",
		"react-resizable-panels": "^3.0.6",
		"recharts": "2.15.4",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.4.0",
		"vaul": "^1.1.2",
		"zod": "^4.1.12"
	}
}
