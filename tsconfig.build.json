{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*"],
	"exclude": [
		"src/**/*.test.*",
		"src/**/test-setup.ts",
		"src/**/*.convex.test.*",
		"src/**/_generated"
	]
}
